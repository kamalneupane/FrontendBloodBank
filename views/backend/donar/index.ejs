<%- include('dashboard.ejs') %>
<%- include('../partials/flash.ejs')%>
<form action="/donar/search" method="get">
    <div class="row mt-3">
        <div class="float-right col-md-10">
            <div class="row">
                <div class="col-md-4">
                    
                </div>
                <div class="col-md-4">
                    <input type="search" name="keyword" id="keyword" placeholder="Search with Address" required class="form-control">
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary"><i class="fas fa-search"></i></button>
                </div>
            </div>
        </div>
    </div>
</form>
<div class="row mt-5">
    <div class="col-md-8 m-auto">
         <h3 class="text-center">Available Blood Stocks</h3>
         <table class="table table-striped">
             <thead class="thead thead-dark">
                 <tr>
                     <th>Blood Groups</th>
                     <th>Blood Units(in ml)</th>
                 </tr>
             </thead>
             <tbody>
                 <% bloods.forEach((blood) => { %>
                     <tr>
                         <td><%= blood.name %></td>
                         <td><%= blood.units %></td>
                     </tr>
                 <% }) %>
             </tbody>
         </table>
    </div>
</div>
<%- include('footer.ejs') %>
